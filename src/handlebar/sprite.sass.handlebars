{{#extend "scss"}}
{{#content "sprites"}}
{{#each sprites}}
@mixin sprite-{{name}} {
    display: block;
    width: {{px.width}};
    height: {{px.height}};
    background-image: url('{{{escaped_image}}}');
    background-repeat: no-repeat;
    background-position: {{px.offset_x}} {{px.offset_y}};
}

.icon-{{name}} {
    @include sprite-{{name}};
}

{{/each}}
{{/content}}
{{#content "spritesheet"}}
{{/content}}
{{/extend}}